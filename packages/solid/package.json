{
  "name": "@lightningtv/solid-ui",
  "version": "0.31.2",
  "description": "A shared library of components for the LightningJS Solid Framework.",
  "main": "dist/index.js",
  "source": "./index.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    },
    "./src": {
      "import": "./index.ts",
      "types": "./index.ts"
    }
  },
  "files": [
    "dist",
    "components",
    "utils",
    "*.js",
    "*.jsx",
    "*.ts",
    "*.tsx",
    "types",
    "utils",
    "components",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "start": "npm run dev",
    "dev": "pnpm run storybook",
    "build-lib": "tsc -b",
    "build-storybook": "storybook build",
    "prepack": "npm run build-lib",
    "storybook": "storybook dev -p 6006",
    "test": "vitest --disable-console-intercept",
    "test:update-snapshots": "vitest -u"
  },
  "author": "",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rdkcentral/solid-ui.git"
  },
  "dependencies": {
    "@lightningjs/renderer": "^2.4.0",
    "@solid-primitives/refs": "^1.0.8"
  },
  "peerDependencies": {
    "@lightningtv/core": "^2.4.2",
    "@lightningtv/solid": "^2.4.1",
    "solid-js": "*"
  },
  "devDependencies": {
    "@lightningtv/l3-ui-theme-base": "workspace:*",
    "@lightningtv/vite-hex-transform": "^1.1.0",
    "@storybook/addon-docs": "^8.2.9",
    "@storybook/addon-essentials": "^8.2.9",
    "@storybook/addon-interactions": "^8.2.9",
    "@storybook/addon-links": "^8.2.9",
    "@storybook/blocks": "^8.2.9",
    "@storybook/builder-vite": "^8.2.9",
    "@storybook/html": "^8.2.9",
    "@storybook/html-vite": "^8.2.9",
    "@storybook/icons": "^1.2.10",
    "@storybook/manager-api": "^8.2.9",
    "@storybook/testing-library": "^0.2.2",
    "@storybook/theming": "^8.2.9",
    "@vitest/browser": "^1.6.0",
    "jsdom": "^24.1.0",
    "playwright": "^1.44.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "storybook": "^8.2.9",
    "storybook-solidjs": "1.0.0-beta.2",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.4.5",
    "vite": "^5.3.5",
    "vite-bundle-visualizer": "^1.2.1",
    "vite-plugin-cross-origin-isolation": "^0.1.6",
    "vite-plugin-dts": "^3.9.1",
    "vite-plugin-solid": "^2.10.2",
    "vitest": "^1.6.0"
  }
}
