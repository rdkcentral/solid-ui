{
  "extends": "../../tsconfig.json",
  "exclude": ["./dist", "./node_modules", "./storybook-static", "./**/*.test.*"],
  "no-emit": false,
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "outDir": "./dist",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "skipLibCheck": true,
    "types": ["solid-js", "vite/client"],
    "paths": {
      "theme": ["../l3-ui-theme-base/theme.d.ts"],
      "types": ["./types/*"]
    }
  }
}
